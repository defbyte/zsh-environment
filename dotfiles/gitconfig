[core]
	editor = mate --wait --line 1 --name 'Git Commit Message'
	excludesfile = ~/.gitignore
	autocrlf = input
	filemode = false
	ignorecase = false

[color]
	ui = true

[alias]
	aa = add --all
	assume = update-index --assume-unchanged
	b = branch --verbose --verbose # Sending the option twice is not a typo
    branches = branch --all --verbose --verbose # Sending the option twice is not a typo
	co = checkout
	del = branch --delete
	delete = branch --delete
	hub = "!git-hub"
	issue = "!git-issue"
	issues = "!git-issues"
	l = log -4
	m = commit
	new = checkout -b
	s = status --short --branch
	unassume = update-index --no-assume-unchanged

[status]
	relativepaths = false

[push]
	default = matching
